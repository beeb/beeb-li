		"remark-abbr": "^1.4.2",
		"remark-toc": "^9.0.0",
		"satori": "^0.19.1",
		"shiki": "^3.21.0",
		"svelte": "^5.47.1",
		"svelte-check": "^4.3.5",
		"svelte-preprocess": "^6.0.3",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"unplugin-icons": "^23.0.1",
		"vite": "^7.3.1",
		"vite-imagetools": "^9.0.2",
		"vite-plugin-arraybuffer": "^0.1.2",
		"vite-plugin-data-url": "^1.0.0"
