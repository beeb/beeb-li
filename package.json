{
	"name": "beeb-li",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome lint src",
		"format": "biome format . --write && prettier --write src",
		"postbuild": "pagefind --site public && rm -rf ./static/pagefind && cp -r ./public/pagefind/ ./static/pagefind/"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@formatjs/intl-locale": "^5.2.0",
